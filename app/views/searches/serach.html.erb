<% if @range == "User" %>
Users search for <%= @word %>
  <table class="table">
    <thead>
      <th colspan="3"></th>
      <th>Name</th>
      <th>Introduction</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
          <td><%= link_to user.name, user_path(user) %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% elsif @range == "Book" %>
  Books search for <%= @word %>
    <table class="table">
      <thead>
        <th colspan="2"></th>
        <th>Title</th>
        <th>Opinion</th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image, size:"50x50" %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>