<h2>Follow Users</h2>
<% if @user.followings.count == 0 %>
  <p>ユーザーはいません</p>
<% else %>
 <table class ="table">
   <thead>
     <tr>
       <th>image</th>
       <th>name</th>
      </tr>
   </thead>

   <tbody>
     <% @users.each do |user| %>
     <tr>
       <td><%= image_tag user.get_profile_image, size:"50x50" %></td>
       <td><%= user.name %></td>
       <td>フォロー数:<%= user.followings.count %></td>
       <td>フォロワー数:<%= user.followers.count %></td>
       <td><%= link_to "Show", user_path(user) %></td>
     </tr>
     <% end %>
   </tbody>
 </table>
 <% end %>