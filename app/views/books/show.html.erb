<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/info', user: @user, book: @books %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
      <table class="table">
          <tr>
            <td><%= link_to user_path(@user) do %>
                  <%= image_tag @user.get_profile_image, size: "100x100" %><br>
                  <%= @user.name %>
                <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>

            <%= render 'favorites/favorite', book: @book %>

            <td>コメント数:<%= @book.book_comments.count %></td>

            <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?'} %>
              </td>
            <% end %>
          </tr>

          <% @book.book_comments.each do |book| %>
            <tr>
              <td><%= image_tag current_user.get_profile_image, size: "50x50" %></td>
              <td><%= book.comment %></td>
              <td><%= link_to "Destroy", book_book_comment_path(book, @book), method: :delete, class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>


      </table>
      <%= render 'layouts/error', book: @comment %>
      <%= render 'book_comments/comment_form', book: @book, comment: @comment %>
    </div>
  </div>
</div>