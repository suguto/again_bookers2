<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'info', user: current_user, book: @books %>

    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
       <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image, size:"50x50" %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
              <% if user != current_user %>
                <% if current_user.following?(user) %>
                  <td><%= link_to "フォロー外す", user_relationships_path(user), method: :delete %></td>
                <% else %>
                  <td><%= link_to "フォローする", user_relationships_path(user),method: :post %></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>